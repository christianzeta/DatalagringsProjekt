<Window x:Class="Store.CreateAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
        Title="CreateAccount" Height="450" Width="800">
    <Grid Background="LightBlue">
        <Label Content="CREATE ACCOUNT" Margin="0,90,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="20"/>
        <TextBox Name="CreateAccountUsernameField" HorizontalAlignment="Center" Margin="0,150,0,0" Text="Username" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" BorderThickness="2"/>
        <TextBox Name="CreateAccountPasswordField" HorizontalAlignment="Center" Margin="0,175,0,0" Text="Password" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" BorderThickness="2"/>
        <Button Click="AccountCreate_Click" Content="Create Account" HorizontalAlignment="Center" Margin="0,220,0,0" VerticalAlignment="Top"/>


    </Grid>
</Window>
