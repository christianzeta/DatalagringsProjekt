<Window x:Class="Store.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid Background="LightBlue">
        


        <Label Content="WELCOME" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Top" FontSize="20"/>
        
        <TextBox Name="NameField" HorizontalAlignment="Center" Margin="0,150,0,0" Text="Username" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" BorderThickness="2" />
        <Button Click="LogIn_Click" Content="Log In" HorizontalAlignment="Center" Margin="0,205,0,0" VerticalAlignment="Top"/>
        <TextBox Name="PasswordField" HorizontalAlignment="Center" Margin="0,175,0,0" Text="Password" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" BorderThickness="2">
        </TextBox>
        <Label Content="or" HorizontalAlignment="Center" Margin="0,225,0,0" VerticalAlignment="Top"/>
        <Button Click="CreateAccount_Click" Content="Create Account" HorizontalAlignment="Center" Margin="0,250,0,0" VerticalAlignment="Top"/>
        
        




    </Grid>
    
</Window>
